<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.app.testassesmentcartas.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose your card"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_marginTop="70dp"
        android:textColor="#7a1c33"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        >

        <ImageButton
            android:id="@+id/card"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/choice"
            android:onClick="cardClick"
            android:adjustViewBounds="true"
            />

        <ImageButton
            android:id="@+id/card2"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/choice"
            android:onClick="cardClick"
            android:adjustViewBounds="true"
             />

        <ImageButton
            android:id="@+id/card3"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:background="@drawable/choice"
            android:onClick="cardClick"
            android:adjustViewBounds="true"
             />
    </LinearLayout>

    <TextView
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:textSize="30sp"
        android:text=""
        android:textAlignment="center"
        android:textColor="#e50940"
        android:visibility="invisible"
        />

    <Button
        android:id="@+id/btnAgain"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Play again"
        android:textSize="15sp"
        android:layout_gravity="center"
        android:background="#662334"
        android:textColor="#ffffff"
        android:visibility="invisible"
        android:onClick="againClick"
        />

</LinearLayout>
